{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@public/*": ["public/*"],
      "@main/*": ["src/main/*"],
      "@renderer*/": ["src/renderer/*"],
	  "@shared/*": ["src/shared/*"],
	  "@ui/*": ["src/ui/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
	"target": "es2018",
	"strict": true
  },
  "exclude": ["node_modules"]
}
